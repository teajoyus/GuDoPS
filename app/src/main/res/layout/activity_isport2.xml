<?xml version="1.0" encoding="utf-8"?>
<com.example.launcher.MyMapDraw xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/demo"
    android:id="@+id/rootView"
    >

    <View
        android:id="@+id/gongli_v"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:layout_marginTop="442dp"
        android:layout_marginLeft="15dp"
        ></View>
    <TextView
        android:id="@+id/gongli_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.25"
        android:textSize="62sp"
        android:textStyle="italic|bold"
        android:textColor="#324152"
        android:layout_marginTop="442dp"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gongli_tv"
        android:text="公里"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#e0324152"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="5dp"
        />
    <View
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="512dp"
        ></View>
    <TextView
        android:id="@+id/date"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="2019年2月24日 22:11"
        android:textSize="12sp"
        android:textColor="#50000000"
        android:gravity="center_vertical|right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="512dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="575dp"
    android:background="#ffffff"
    >
    <TextView
        android:id="@+id/avg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="26'18"
        android:textSize="20sp"
        android:textColor="#f0324152"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="00:45:00"
        android:textSize="20sp"
        android:textColor="#f0324152"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/daka"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="138.0"
        android:textSize="20sp"
        android:textColor="#f0324152"
        android:gravity="center"
        />
</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/anchor_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/anchor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            >
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/anchor_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="锚点"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:onClick="onClickAnchor"
            />
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/draw_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="描线"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:onClick="onClickDraw"
            />
        <com.gc.materialdesign.views.ButtonRectangle
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="返回"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:clickable="true"
            android:onClick="oncClickBack"
            />
        </LinearLayout>
    </RelativeLayout>
</com.example.launcher.MyMapDraw>